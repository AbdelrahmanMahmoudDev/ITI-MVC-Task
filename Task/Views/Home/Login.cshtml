@{
	ViewData["Title"] = "Login";
}
@model LoginUserViewModel;

<div class="container-scroller">
	<div class="container-fluid page-body-wrapper full-page-wrapper">
		<div class="content-wrapper d-flex align-items-center auth">
			<div class="row flex-grow">
				<div class="col-lg-4 mx-auto">
					<div class="auth-form-light text-left p-5">
						<div class="brand-logo">
							<img src="~/assets/images/logo.svg">
						</div>
						<h4>Login</h4>
						<form method="post" asp-controller="Home" asp-action="SaveLogin" class="pt-3">
							<div class="form-group">
								<input asp-for="@Model.Username" type="text" class="form-control form-control-lg" placeholder="Username">
							</div>
							<div class="form-group">
								<input asp-for="@Model.Password" type="password" class="form-control form-control-lg" placeholder="Password">
							</div>
							<div class="form-check">
								<label asp-for="@Model.IsRemembered" class="form-check-label text-muted">
									<input asp-for="@Model.IsRemembered" type="checkbox" class="form-check-input"> Keep me signed in <i class="input-helper"></i>
								</label>
							</div>
							<div class="mt-3">
								<button type="submit" class="btn btn-block btn-gradient-primary btn-lg font-weight-medium auth-form-btn">LOGIN</button>
							</div>
							<div class="text-center mt-4 font-weight-light">
								Don't have an account ? <a asp-controller="Home" asp-action="Register" class="text-primary">Sign Up</a>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
		<!-- content-wrapper ends -->
	</div>
	<!-- page-body-wrapper ends -->
</div>
<!-- container-scroller -->