@{
}
@model CourseVM

<div class="grid-margin stretch-card">
	<div class="card">
		<div class="card-body">
			<h4 class="card-title">Please enter new details</h4>
			<form class="forms-sample" asp-controller="Course" asp-action="SaveEdit" asp-route-id="@Model.Id">
				<div class="form-group">
					<label asp-for="@Model.Name">Name</label>
					<input asp-for="@Model.Name" type="text" class="form-control" placeholder="Name">
					<span asp-validation-for="@Model.Name"></span>
				</div>

				<div class="form-group">
					<label asp-for="@Model.Topic">Topic</label>
					<input asp-for="@Model.Topic" type="text" class="form-control" placeholder="Topic">
					<span asp-validation-for="@Model.Topic"></span>
				</div>

				<div class="form-group">
					<label asp-for="@Model.MinimumDegree">Minimum Degree</label>
					<input asp-for="@Model.MinimumDegree" type="text" class="form-control" placeholder="Minimum Degree">
					<span asp-validation-for="@Model.MinimumDegree"></span>
				</div>
				<button type="submit" class="btn btn-gradient-primary me-2">Submit</button>
				<a asp-controller="Course" asp-action="Index" class="btn btn-light">Cancel</a>
			</form>
		</div>
	</div>
</div>

@section Scripts
{
	<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
	<script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
}