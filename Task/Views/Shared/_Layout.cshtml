<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
	<title>@ViewData["Title"] - Schoola</title>
	<!-- plugins:css -->
	<link rel="stylesheet" href="~/assets/vendors/mdi/css/materialdesignicons.min.css">
	<link rel="stylesheet" href="~/assets/vendors/css/vendor.bundle.base.css">
	<!-- endinject -->
	<!-- Layout styles -->
	<link rel="stylesheet" href="~/assets/css/demo_3/style.css">
	<!-- End layout styles -->
	<link rel="shortcut icon" href="~/assets/images/favicon.png" />

	@await RenderSectionAsync("Styles", required: false)

</head>
<body>
	<div class="container-scroller">
		@if (User.Identity.IsAuthenticated)
		{
			<header>
				<div class="horizontal-menu">
					<nav class="bottom-navbar">
						<div class="container">
							<ul class="nav page-navigation">
								@if (User.IsInRole("Admin"))
								{
									<li class="nav-item">
										<a class="nav-link" asp-controller="Home" asp-action="Index">
											<i class="mdi mdi-home menu-icon"></i>
											<span class="menu-title">Dashboard</span>
										</a>
									</li>

									<li class="nav-item">
										<a class="nav-link" asp-controller="Department" asp-action="Index">
											<span class="menu-title">Departments</span>
										</a>
									</li>

									<li class="nav-item">
										<a class="nav-link" asp-controller="Instructor" asp-action="Index">
											<span class="menu-title">Instructors</span>
										</a>
									</li>
									<li class="nav-item">
										<a class="nav-link" asp-controller="Student" asp-action="index">
											<span class="menu-title">Students</span>
										</a>
									</li>

									<li class="nav-item">
										<a class="nav-link" asp-controller="Course" asp-action="Index">
											<span class="menu-title">Course</span>
										</a>
									</li>
								}
								else if (User.IsInRole("HR"))
								{
									<li class="nav-item">
										<a class="nav-link" asp-controller="Instructor" asp-action="Index">
											<span class="menu-title">Instructors</span>
										</a>
									</li>
									<li class="nav-item">
										<a class="nav-link" asp-controller="Student" asp-action="index">
											<span class="menu-title">Students</span>
										</a>
									</li>
								}
								else if (User.IsInRole("Instructor"))
								{
									<li class="nav-item">
										<a class="nav-link" asp-controller="Course" asp-action="Index">
											<span class="menu-title">Course</span>
										</a>
									</li>
								}
								else
								{
									<li class="nav-item">
										<a class="nav-link" asp-controller="Student" asp-action="index">
											<span class="menu-title">Students</span>
										</a>
									</li>
								}
								<li class="nav-item">
									<a class="nav-link" asp-controller="Home" asp-action="SignOut">
										<span class="menu-title">Logout</span>
									</a>
								</li>
							</ul>
						</div>
					</nav>
				</div>
			</header>
		}
		<div class="container-fluid page-body-wrapper">
			<div class="main-panel">
				<div class="content-wrapper">
					@RenderBody()
				</div>
			</div>
		</div>
		@if (User.Identity.IsAuthenticated)
		{
			<footer class="footer">
				<div class="container">
					<div class="d-sm-flex justify-content-center justify-content-sm-between">
						<span class="text-muted text-center text-sm-left d-block d-sm-inline-block">Copyright © 2021 <a href="https://www.bootstrapdash.com/" target="_blank">BootstrapDash</a>. All rights reserved.</span>
						<span class="float-none float-sm-right d-block mt-1 mt-sm-0 text-center">Hand-crafted &amp; made with <i class="mdi mdi-heart text-danger"></i></span>
					</div>
				</div>
			</footer>
		}
	</div>
	<!-- plugins:js -->
	<script src="~/assets/vendors/js/vendor.bundle.base.js"></script>
	<!-- inject:js -->
	<script src="../assets/js/off-canvas.js"></script>
	<script src="../assets/js/hoverable-collapse.js"></script>
	<script src="../assets/js/misc.js"></script>
	<script src="../assets/js/settings.js"></script>
	<script src="../assets/js/todolist.js"></script>
	<script src="../assets/js/jquery.cookie.js"></script>
	<!-- endinject -->
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
