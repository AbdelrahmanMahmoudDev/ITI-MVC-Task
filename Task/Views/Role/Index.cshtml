@{
}
@model RoleViewModel;

<div class="container-scroller">
	<div class="container-fluid page-body-wrapper full-page-wrapper">
		<div class="content-wrapper d-flex align-items-center auth">
			<div class="row flex-grow">
				<div class="col-lg-4 mx-auto">
					<div class="auth-form-light text-left p-5">
						<div class="brand-logo">
							<img src="~/assets/images/logo.svg">
						</div>
						<h4>Role</h4>
						<form method="post" asp-controller="Role" asp-action="SaveRole" class="pt-3">
							<div class="form-group">
								<label asp-for="@Model.RoleName">Role</label>
								<input asp-for="@Model.RoleName" type="text" class="form-control" placeholder="Role" />
								<span asp-validation-for="@Model.RoleName" class="text-danger"></span>
							</div>
							<div class="mt-3">
								<button type="submit" class="btn btn-block btn-gradient-primary btn-lg font-weight-medium auth-form-btn">SUBMIT</button>
							</div>
							<div class="text-center mt-4 font-weight-light">
								<a asp-controller="Home" asp-action="Register" class="text-primary">Login / Register</a>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
		<!-- content-wrapper ends -->
	</div>
	<!-- page-body-wrapper ends -->
</div>
<!-- container-scroller -->

@section Scripts
{
	<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
	<script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
}