@{
}
@model List<Student>
<table class="table">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Name</th>
            <th scope="col">Age</th>
            <th scope="col">Address</th>
            <th scope="col">Department</th>
        </tr>
    </thead>
    <tbody>
        @for(int i = 0; i < @Model.Count; i ++)
        {
            <tr>
                <td>@Model[i].StudentId</td>
                <td>@Model[i].name</td>
                <td>@Model[i].age</td>
                <td>@Model[i].address</td>
                <td>@Model[i].Department.name</td>
            </tr>
        }
    </tbody>
</table>