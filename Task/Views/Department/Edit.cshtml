@{
}
@model DepartmentVM

<div class="grid-margin stretch-card">
	<div class="card">
		<div class="card-body">
			<h4 class="card-title">Please enter new details</h4>
			<form class="forms-sample" asp-controller="Department" asp-action="SaveEdit" asp-route-id="@Model.Id">
				<div class="form-group">
					<label asp-for="@Model.name">Name</label>
					<input asp-for="@Model.name" type="text" class="form-control" placeholder="Name">
					<span asp-validation-for="@Model.name"></span>
				</div>

				<div class="form-group">
					<label asp-for="@Model.description">Description</label>
					<input asp-for="@Model.description" type="text" class="form-control" placeholder="Description">
					<span asp-validation-for="@Model.description"></span>
				</div>

				<div class="form-group">
					<label asp-for="@Model.location">Location</label>
					<input asp-for="@Model.location" type="text" class="form-control" placeholder="Location">
					<span asp-validation-for="@Model.location"></span>
				</div>
				<button type="submit" class="btn btn-gradient-primary me-2">Submit</button>
				<a asp-controller="Department" asp-action="Index" class="btn btn-light">Cancel</a>
			</form>
		</div>
	</div>
</div>

@section Scripts
{
	<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
	<script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
}